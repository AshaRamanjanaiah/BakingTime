<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipes_items_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:layout_marginLeft="@dimen/margin"
    android:background="@drawable/rounded_edge"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_recipe"
        android:layout_width="@dimen/recipe_text_width"
        android:layout_height="@dimen/main_item_height"
        app:fontFamily="monospace"
        android:textSize="@dimen/main_textsize"
        android:textStyle="bold"
        android:padding="@dimen/item_padding"
        android:layout_gravity="left"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/right_arrow"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_gravity="center"
        android:paddingRight="@dimen/padding_right_item"/>


</LinearLayout>